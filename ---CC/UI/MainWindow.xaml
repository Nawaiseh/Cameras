<MahApps:MetroWindow
    x:Class="Cameras.UI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Blend="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Controls="clr-namespace:Cameras.UI.Controls"
    xmlns:MahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:MarkupCompatibility="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Cameras"
    MarkupCompatibility:Ignorable="Blend"
    BorderBrush="{DynamicResource AccentColorBrush}"
    Icon="pack://application:,,,/Cameras;component/UI/Images/CCTV.png"
    IsMaxRestoreButtonEnabled="False"
    IsMinButtonEnabled="False"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SaveWindowPosition="True"
    ShowIconOnTitleBar="True"
    SizeToContent="WidthAndHeight"
    TitleCaps="False"
    TitleForeground="BlanchedAlmond"
    TitlebarHeight="40"
    WindowStartupLocation="CenterScreen"
    WindowStyle="ToolWindow"
    WindowTitleBrush="#FF494E54"
    WindowTransitionsEnabled="False">
    <!--Background="#FF222222"-->

    <Controls:ControlPanel x:Name="ControlPanel" Margin="10"/>
</MahApps:MetroWindow>
